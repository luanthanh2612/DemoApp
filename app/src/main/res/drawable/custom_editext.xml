<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape
        android:shape="rectangle"

        >
        <solid
            android:color="@color/colorWhite"
            />
        <corners
            android:radius="3dp"
            />
        <stroke
            android:width="2dp"
            android:color="@color/colorGreen"
            />
    </shape>
</item>
    <item
        android:bottom="2dp">
        <shape
            android:shape="rectangle"
            >
            <corners
                android:radius="3dp"
                />
            <solid
                android:color="@color/colorWhite"
                />
            <stroke
                android:color="@color/colorGreen"
                />
        </shape>

    </item>
</layer-list>