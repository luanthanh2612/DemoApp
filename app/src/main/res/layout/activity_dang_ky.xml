<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dang_ky"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edwardsmith.demoapp.Activity.DangKyActivity">

    <ImageView
        android:id="@+id/imageViewHinhDk"
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:contentDescription="@string/image_des"
        />
    <EditText
        android:id="@+id/ediitext_tenDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Nhap Ten"
        android:padding="10dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/imageViewHinhDk"
        android:maxLines="1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ediitext_tenDK"
        android:hint="Nhap Dia Chi"
        android:id="@+id/edittext_diachiDK"
        android:padding="10dp"
        android:textColor="@color/colorBlack"
        android:maxLines="1"
        />
    <EditText
        android:id="@+id/edittext_sdtDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_diachiDK"
        android:hint="Nhap SDT"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:maxLines="1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_matkhauDK"
        android:layout_below="@+id/edittext_sdtDK"
        android:hint="Nhap Mat Khau"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack"
        android:maxLines="1"
        />
    <LinearLayout
        android:layout_below="@+id/edittext_matkhauDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDangKy"
            android:text="Dang Ky"
            android:textColor="@color/colorBlack"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/buttonDangKyDN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dang Nhap"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:background="@drawable/custom_button_scan"
            android:layout_margin="10dp"
            />
    </LinearLayout>
</RelativeLayout>
