<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_thong_tin_dt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edwardsmith.demoapp.Activity.ThongTinDTActivity">
    <ImageView
        android:id="@+id/imageViewHinhThongTinDT"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_des"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/imageViewHinhThongTinDT"
        android:layout_toRightOf="@+id/imageViewHinhThongTinDT"
        android:layout_toEndOf="@+id/imageViewHinhThongTinDT"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="@color/colorBlack"
        android:id="@+id/textViewThongTinTenDT"
        android:singleLine="true"
        android:maxLines="1"
        />
    <TextView
        android:id="@+id/textViewThongTinGiaDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewThongTinTenDT"
        android:layout_toRightOf="@+id/imageViewHinhThongTinDT"
        android:layout_toEndOf="@+id/imageViewHinhThongTinDT"
        android:layout_marginTop="7dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:singleLine="true"
        android:maxLines="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textViewThongTinGiaDT"
        android:layout_toRightOf="@+id/textViewThongTinGiaDT"
        android:layout_toEndOf="@+id/textViewThongTinGiaDT"
        android:text="Ä‘"
        android:textColor="@color/colorAccent"
        />
    <Button
        android:id="@+id/buttonMua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dat Hang"
        android:textColor="@color/colorBlack"
        android:textAllCaps="false"
        android:layout_below="@+id/textViewThongTinGiaDT"
        android:layout_toRightOf="@+id/imageViewHinhThongTinDT"
        android:layout_toEndOf="@+id/imageViewHinhThongTinDT"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="4dp"
        />
    <TextView
        android:id="@+id/textViewThongChiTietDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewHinhThongTinDT"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
</RelativeLayout>
