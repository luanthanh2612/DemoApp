<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewHinhDT"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="7dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_des"
        />
    <TextView
        android:id="@+id/textViewTenDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/imageViewHinhDT"
        android:layout_toRightOf="@+id/imageViewHinhDT"
        android:layout_toEndOf="@+id/imageViewHinhDT"
        android:layout_marginTop="7dp"
        android:textSize="23sp"
        android:textColor="@color/colorButton"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewGiaDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewHinhDT"
        android:layout_toEndOf="@+id/imageViewHinhDT"
        android:layout_below="@+id/textViewTenDT"
        android:layout_marginTop="9dp"
        android:textColor="@color/colorRed"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewGiaDT"
        android:layout_toEndOf="@+id/textViewGiaDT"
        android:layout_toRightOf="@+id/textViewGiaDT"
        android:text="Ä‘"
        android:textColor="@color/colorRed"
        />
</RelativeLayout>